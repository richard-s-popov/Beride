<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html;" />
	<link rel="stylesheet" type="text/css" href="~/Content/Site.css" charset="utf-8"/>
    <link rel="stylesheet" type="text/css" href="~/Content/index_custom_checkbox/checkbox.css" charset="utf-8"/>
    <link rel="stylesheet" type="text/css" href="~/Content/custom-theme/jquery-ui-1.9.1.custom.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.4.css")" type="text/css" media="screen" />
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.9.1.custom.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/jquery.mousewheel-3.0.4.pack.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/jquery.fancybox-1.3.4.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/account/register.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/account/login.js")"></script>
    @RenderSection("head", required:false)
	<title>Beride.ru</title>
</head>
    <body>
        <div class="index-header-content">
            <div class="left-menu">
                <span></span>
                <span></span> 
                <span></span>
                <span></span>
            </div>
            <div class="right-menu">
                <a class="simple-button" style="float: right;margin-top: 14px;margin-left: 20px;text-decoration: none;"href="@Url.Action("CreateTrip", "Trips")">Создать поездку</a>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <a id="signIn" href="#popup" class="header-signin" style="display: none;">Вход / Регистрация</a>
                    <a id="logOut" class="header-signin" href="@Url.Action("Logout", "Account")">Выход</a>
                    <a id="MyTripsCabinet" class="header-signin">Мои поездки</a>
                }
                else
                {
                    <a id="signIn" href="#popup" class="header-signin">Вход / Регистрация</a>
                    <a id="logOut" class="header-signin" style="display: none;" href="@Url.Action("Logout", "Account")">Выход</a>   
                }
                <div style="display:none">
                    <div id="popup">
                        <div id="registrationContainer" style="display: none;">
                            @Html.Partial("Partials/RegisterForm")
                        </div>
                        <div id="loginContainer">
                            @Html.Partial("Partials/LoginForm")
                        </div>
                        <div id="registerSuccess"></div>
                    </div>
                </div>
                <div style="display: none;">
                    <a id="showMyTripsCabinetPopup" href="#myTripsCabinetPopup">Мои поездки</a>
                    <div id="myTripsCabinetPopup"></div>
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="index-footer">
            &copy; Beride.ru, <a href="http://vk.com/id158378937" target="_blank">Richard S.Popov</a>
        </div>
    </body>
    <script type="text/javascript">
        document.GetPlacesUrl = "@Url.Action("GetPlaces","Trips")";
        document.MyTripsCabinet = "@Url.Action("MyTripsCabinet","Personal")";
        document.IsAuthenticatedUrl = "@Url.Action("IsAuthenticated","Account")";
    </script>
</html>